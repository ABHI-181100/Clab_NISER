from mylib import *

A = read_matrix().read_matrix1("matrix_t5.txt")
b = read_matrix().read_matrix1("t6.txt")



cd().print_matrix(A, "Original Matrix A")
L = cd().cholesky_decomposition(A)
cd().print_matrix(L, "L (Lower Triangular)")
L_dagger = cd().transpose(L)
cd().print_matrix(L_dagger, "L dagger (Transpose of L)")

y = cd().matrix_multiply(L, L_dagger)
cd().print_matrix(y, "L * L dagger (Should match A)")

mixmat = cd().mix(L, L_dagger)
cd().print_matrix(mixmat, "Combined L and L_dagger Matrix")
print(cd().solve2(mixmat, b), "value of x1,x2,x3,x4...")






